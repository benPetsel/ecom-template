<main class="container mx-auto mt-28 md:px-5 px-2 flex md:flex-row flex-col">
<p style="color: green"><%= notice %></p>
<div class="flex flex-col w-screen min-h-screen p-10 bg-gray-100 text-gray-800">
<div class="max-w-2xl px-8 py-4 mx-auto bg-white rounded-lg shadow-md dark:bg-gray-800">

<%= render @product %>


</div>
<div class="flex max-w-2xl px-8 py-4 mx-auto  ">
  <%= link_to "Edit this product", edit_product_path(@product), class: "m-2 px-2 py-2 text-center font-medium justify-self-end  text-center text-white transition-colors duration-200 transform bg-yellow-600 rounded-md hover:bg-yellow-500" %> 
  <%= link_to "Back to products", products_path, class: "m-2 px-2 py-2 text-center font-medium text-white transition-colors duration-200 transform bg-green-600 rounded-md hover:bg-green-500" %>

 
   
</div>
<div class="flex max-w-2xl px-8 py-4 mx-auto  ">
<%= button_to 'Delete Product', @product, class: "m-2 px-2 text-center font-medium text-white transition-colors duration-200 transform bg-red-600 rounded-md hover:bg-red-500",  form: { data: { turbo_confirm: 'Are you sure? This will permanently destroy this product.' }}, method: :delete %>
</div>
</div>
</main>

