
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-center text-gray-800 capitalize lg:text-4xl darkkltext-white">
        About Us</h1>
        <div class=" flex flex-col justify-center md:flex-row ">
            <% if @content.about_pic.attached? %>
                <div class="flex basis-1/3 mx-10">
                    <%= image_tag @content.about_pic, class: " mx-auto" %>
                </div>
            <%end%>
            <% if @content.about_text != ""%>
            <div class="flex basis-2/3 mx-10 my-5">
                <p>
                    <%= @content.about_text %>
                </p>
            </div>
            <%end%>
        </div>
    </div>
