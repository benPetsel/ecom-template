<% @cart.each do |id| %>
<% item = @products.find(id[0])%>


<div class="flex m-10 max-w-lg lg:mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800">
<div class="w-1/3 bg-cover" >
<%= image_tag item.image, style: "width: 200px", class: "mx-auto" %>
</div>

            <div class="w-2/3 p-4 md:p-4">
                    <h1 class="text-2xl font-bold text-gray-800 dark:text-white"><%= item.name %></h1>

                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400"><%= item.description %> </p>

                    <div class="flex mt-2 item-center">
                    
                     </div>

                    <div class="flex justify-between mt-3 item-center">
                        <h1 id=<%= id[1] %> class="total_calculate text-lg font-bold text-gray-700 dark:text-gray-200 md:text-xl">
                        $<%= item.price %>
                        </h1>
                        
                         <%= button_to "Remove from cart", delete_item_path(item.id), method: :post, class: "px-2 py-1 text-xs font-bold text-white uppercase transition-colors duration-200 transform bg-gray-800 rounded dark:bg-gray-700 hover:bg-gray-700 dark:hover:bg-gray-600 focus:outline-none focus:bg-gray-700 dark:focus:bg-gray-600" %>
                    </div>
            </div>
            <div class="flex bg-gray-600">
            <div class="flex flex-col  h-full justify-between">
            <%= button_to "",  add_one_path(item.id), class: "bi bi-chevron-up basis-1/3 w-10 h-10  text-2xl px-2 py-1 text-xs font-bold text-white uppercase transition-colors duration-200 transform bg-gray-800 rounded dark:bg-gray-700 hover:bg-gray-700 dark:hover:bg-gray-600 focus:outline-none focus:bg-gray-700 dark:focus:bg-gray-600" %>
                
            <div class="grid  w-full mx-auto basis-1/3 " >
            <h2 class="text-white text-xl place-self-center"><%= id[1] %></h2>
            </div>
            <%= button_to "", sub_one_path(item.id), class: "bi bi-chevron-down basis-1/3 w-10 h-10 text-2xl px-2 py-1 text-xs font-bold text-white uppercase transition-colors duration-200 transform bg-gray-800 rounded dark:bg-gray-700 hover:bg-gray-700 dark:hover:bg-gray-600 focus:outline-none focus:bg-gray-700 dark:focus:bg-gray-600" %>
                
            
            </div>
            </div>
        </div>
                
<%end%>