 $(document).ready(function () {
   if(window.location.href.indexOf("completed_orders") > -1) {
   $('#complete_tab').addClass("bg-gray-200");
   $('#prod_tab').removeClass("bg-gray-200");
    console.log('this script is running')
  }
  if(window.location.href.indexOf("products") > -1) {
      $('#prod_tab').addClass("bg-gray-200");
   $('#complete_tab').removeClass("bg-gray-200");
    console.log('this script is running')
  }
});

$("#portal_burger").click(function(){
	$("#portal_menu").toggleClass("hidden");
});

    
</script>