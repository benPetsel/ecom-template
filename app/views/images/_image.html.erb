<div id="<%= dom_id image %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Sesh:</strong>
    <%= image.sesh_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Item:</strong>
    <%= image.item_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Secondary:</strong>
    <%= image.secondary_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Purchased:</strong>
    <%= image.purchased %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this image", image, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this image', edit_image_path(image), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
