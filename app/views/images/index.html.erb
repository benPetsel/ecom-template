<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Images</h1>
    <%= link_to 'New image', new_image_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="images" class="min-w-full">
    <%= render @images %>
    <% @images.each do |image| %>


      <% if image.image_for_item.attached? %>
        
        <div class="flex items-center h-64 rounded-lg shadow-lg bg-white">
       <%= image_tag image.image_for_item, style: "width: 200px", class: "mx-auto" %>
       </div>
      
   <%end%>

    <%end%>
  </div>
</div>
